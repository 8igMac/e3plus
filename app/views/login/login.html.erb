<!--login-->
<fieldset class="form-horizontal" id="loginBlock">
    <!--change text-->
      <legend id="title">Log in</legend>
      <%= form_tag do%>
          <p>
              <label class="control-label">User:</label>
              <!--input account-->
              <%= text_field_tag :account, params[:account], {class: "form-control"}%>
          </p>

          <p>

              <label class="control-label">Password:</label>
              <!--input password-->
              <%= password_field_tag :password, params[:password], {class: "form-control"} %>
          </p>

          <p>
              <!--login button-->
              <%= submit_tag "Login", {class: "btn btn-primary btn-lg"}%>
          </p>
      <% end %>
</fieldset>

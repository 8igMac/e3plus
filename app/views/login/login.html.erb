<!--login-->
<div class="container form-block">
  <p style="color: red; text-align: center;"><%= flash[:notice] %></p>
  <!--<%= yield %>-->
  <fieldset class="form">
      <!--change text-->
      <%= form_tag do%>
          <div class="form-group">
              <h2 id="title">E3 plus</h2>
          </div>
          <div class="form-group">
              <label>User:</label>
              <!--input account-->
              <%= text_field_tag :account, params[:account], {class: "form-control"}%>
          </div>

          <div class="form-group">
              <label>Password:</label>
              <!--input password-->
              <%= password_field_tag :password, params[:password], {class: "form-control"} %>
          </div>
          <div class="form-group">
              <!--login button-->
                  <%= submit_tag "Login", {class: "btn btn-primary btn-block"}%>
          </div>
      <% end %>
  </fieldset>
</div>

<div class="container-fluid">

	<!-- page header -->	
	<div class="row">
 		<div class="col-lg-12">
			<h2 class="page-header">Home Page</h2>
		</div>
	</div>

	<!-- content nav -->
	<ul class="nav nav-tabs">
	  <li class="active"><a href="#all" data-toggle="tab" aria-expanded="false">所有公告</a></li>
		<li class=""><a href="#normal" data-toggle="tab" aria-expanded="false">一般公告</a></li>
		<li class=""><a href="#assignment" data-toggle="tab" aria-expanded="true">作業</a></li>

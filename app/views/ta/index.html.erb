<%= link_to '新增公告', controller: 'announces', action: :new %>

<!--list all announces-->
<% @courses.each do |course| %>
    <% course.announces.each do |announce| %>
        <!--the tag of the announce-->
        <%= announce.tag %>
        <!--the topic of the announce-->
        <%= announce.topic %>
        <!--the content of the announce-->
        <%= simple_format(announce.content) %>
        <!--edit announce-->
        <%= link_to  "修改公告", controller: 'announces', action: :edit, id: announce.id %>
        <!--delete announce-->
        <%= button_to '刪除公告', announce_path(announce), method: :delete, data: { confirm: "確定刪除此公告?" } %>
    <% end %>
<% end %>
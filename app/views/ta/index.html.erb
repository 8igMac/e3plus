				<%= render partial: 'announces/all', locals: { announces: @homeworks } %>
			</div>
		</div>

		<div class="tab-pane fade" id="exam">
			<div class="jumbotron content_block">
				<!--list announces with exam tag-->
				<%= render partial: 'announces/all', locals: { announces: @exams } %>

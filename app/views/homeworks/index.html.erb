<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <h2 class="page-header">作業清單</h2>
    </div>
	</div>
</div>

	<!-- hw not finished -->
	<div class="container-fluid">
 	 <div class="row">
    <div class="col-lg-12">
      <h4 >未完成</h4>
    </div>
  </div>
	<div class="well">
    <table class="table table-hover">
			<thead>
        <tr>
            <th>課程</th>
            <th>作業</th>
            <th>截止時間</th>
            <th>狀態</th>
						<th>繳交</th>
        </tr>
			</thead>
			<tbody>
        <% @not_finished_hw.each do |hw| %>
          <% if hw.deadline > Time.now.to_datetime %>
            <tr class="success">
                <td width="20%"><%= hw.course.name %></td>
                <td width="30%"><%= hw.topic %></td>
                <td width="15%"><%= hw.deadline.to_formatted_s(:short) %></td>
                <td width="10%"><%= '未繳交' %></td>
                <td width="4%"><%= link_to '繳交', action: :show, id: hw.id, class: "btn btn-danger" %></td>
            </tr>
					<% end %>
        <% end %>
			</tbody>
    </table>
    <p><%= flash[:notice] %></p>
	</div>
	</div>

	<!-- hw finished -->
	<div class="container-fluid">
 	 <div class="row">
    <div class="col-lg-12">
      <h4 >已完成</h4>
    </div>
  </div>
	<div class="well">
    <table class="table table-hover">
			<thead>
        <tr>
            <th>課程</th>
            <th>作業</th>
            <th>截止時間</th>
            <th>狀態</th>
						<th>繳交</th>
        </tr>
			</thead>
			<tbody>
        <% @finished_hw.each do |hw| %>
            <tr>
                <td width="20%"><%= hw.course.name %></td>
                <td width="30%"><%= hw.topic %></td>
                <td width="15%"><%= hw.deadline.to_formatted_s(:short) %></td>
                <td width="10%"><%= '已繳交' %></td>
                <td width="4%"><%= link_to '繳交', action: :show, id: hw.id, class: "btn btn-danger" %></td>
            </tr>
        <% end %>
			</tbody>
    </table>
    <p><%= flash[:notice] %></p>
	</div>
</div>

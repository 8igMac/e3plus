<br><br>
<div class="container">
    <table class="table .table-striped">
        <tr>
            <td>課程</td>
            <td>作業</td>
            <td>截止時間</td>
        </tr>
        <tr>
        <% @hw.each do |hw| %>
            <% if hw.handed_in == false %>
                <td><%= hw.course.name %></td>
                <td><%= hw.topic %></td>
                <td><%= hw.deadline %></td>
                <td><%= link_to '繳交', action: :show, id: hw.id, class: "btn btn-danger" %></td>
            <% end %>
        <% end %>
        </tr>
    </table>
    <p><%= flash[:notice] %></p>
</div>
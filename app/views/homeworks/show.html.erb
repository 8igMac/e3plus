<%= @hw.announce.course.name %>
<%= @hw.announce.topic %>
<%= @hw.announce.deadline.to_formatted_s(:short) %>
<%= simple_format(@hw.announce.content) %>
<%= simple_form_for @hw, url: homework_path(@hw), method: :patch do |f| %>

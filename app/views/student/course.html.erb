<!--the templete of this page is at app/views/layouts/student.html.erb-->
<div class="container-fluid">

	<!-- page header -->	
	<div class="row">
 		<div class="col-lg-12">
			<h2 class="page-header"><%= @course.name %></h2>
		</div>
	</div>

	<!-- content nav -->
	<ul class="nav nav-tabs">
	  <li class="active"><a href="#home" data-toggle="tab" aria-expanded="false">公告</a></li>
		<li class=""><a href="#assignment" data-toggle="tab" aria-expanded="true">作業</a></li>
		<li class=""><a href="#exam" data-toggle="tab" aria-expanded="true">考試</a></li>
		<li class=""><a href="#course_material" data-toggle="tab" aria-expanded="true">教材</a></li>
	</ul>
	
	<!-- page content -->
	<div id="myTabContent" class="tab-content">

		  <div class="tab-pane fade active in" id="home">
				<div class="jumbotron content_block">
					<table class="table table-hover">
						<thead>
							<tr>
								<th>標籤</th>
								<th>課程</th>
								<th>標題</th>
								<th>發佈時間</th>
								<th>dead line</th>
							</tr>
						</thead>
						<tbody>
  						<!--list all announces-->
 							<% @course.announces.each do |announce| %>
									<tr>
										<td><%= announce.tag.name %></td> <!--the tag of the announce-->
										<td><%= announce.course.name %></td> <!-- the course name of the announce -->
										<td><%= announce.topic %></td> <!--the topic of the announce-->
										<td></td> <!-- the announce time -->
										<td><%= announce.deadline %></td> <!-- the deadline -->
									</tr>
  						  <% end %>
						</tbody>
					</table>
				</div>
			</div>

			<div class="tab-pane fade" id="assignment">
				<div class="jumbotron content_block">
					<h4>This is assignment content</h4>
				</div>
			</div>

			<div class="tab-pane fade" id="exam">
				<div class="jumbotron content_block">
					<h4>This is exam content</h4>
				</div>
			</div>

			<div class="tab-pane fade" id="course_material">
				<div class="jumbotron content_block">
					<h4>This is course material content</h4>
				</div>
			</div>

	</div>
</div>

<!--the templete of this page is at app/views/layouts/student.html.erb-->
	<div class="container-fluid">

		<!-- page header -->	
		<div class="row">
  		<div class="col-lg-12">
				<h2 class="page-header">Home Page</h2>
			</div>
		</div>

		<!-- content nav -->
		<ul class="nav nav-tabs">
		  <li class="active"><a href="#all" data-toggle="tab" aria-expanded="false">所有公告</a></li>
			<li class=""><a href="#normal" data-toggle="tab" aria-expanded="false">一般公告</a></li>
			<li class=""><a href="#assignment" data-toggle="tab" aria-expanded="true">作業</a></li>
			<li class=""><a href="#exam" data-toggle="tab" aria-expanded="true">考試</a></li>
			<li class=""><a href="#course_material" data-toggle="tab" aria-expanded="true">教材</a></li>
		</ul>
		
		<!-- page content -->
		<div id="myTabContent" class="tab-content">
			  <div class="tab-pane fade active in" id="all">
					<div class="jumbotron content_block">
	  				<!--list all announces-->
	  				<% @courses.each do |course| %>
	  				  <% course.announces.each do |announce| %>
	  				    <!--the tag of the announce-->
	  				    <%= announce.tag.name %>
	  				    <!--the topic of the announce-->
	  				    <%= announce.topic %>
	  				    <!--the content of the announce-->
	  				    <%= simple_format(announce.content) %>
	  				  <% end %>
	  				<% end %>
					</div>
				</div>
				<div class="tab-pane fade" id="normal">
					<div class="jumbotron content_block">
						<h4>這裏放一般公告</h4>
					</div>
				</div>
				<div class="tab-pane fade" id="assignment">
					<div class="jumbotron content_block">
						<h4>這裏放作業</h4>
					</div>
				</div>
				<div class="tab-pane fade" id="exam">
					<div class="jumbotron content_block">
						<h4>這裏放考試公告</h4>
					</div>
				</div>
				<div class="tab-pane fade" id="course_material">
					<div class="jumbotron content_block">
						<h4>這裏放教材</h4>
					</div>
				</div>
		</div><!-- end of page content -->

	</div><!-- end of fluid -->
